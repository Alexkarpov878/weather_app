# =========================================
# Rails artifacts
# =========================================

# Bundler
/.bundle/

# Credentials and environment
/config/credentials.yml.enc
/config/master.key
.env*
.envrc

# By default Rails logs everything here
/log/*
!/log/.keep

# Temporary files
/tmp/*
!/tmp/.keep

# PID files
/tmp/pids/*
!/tmp/pids/.keep

# Caches
/tmp/cache/*
!/tmp/cache/.keep

# Uploaded files/storage
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# =========================================
# RubyGems / Bundler
# =========================================

/vendor/bundle/
/vendor/cache/
/*.gem

# =========================================
# Node, Yarn, and build packs
# =========================================

# If using Webpacker or jsbundling-rails
/node_modules/
/yarn-error.log
/pnpm-debug.log
/public/packs/
/public/packs-test/
/public/assets/
/public/packs/**/*.(js|css).map

# If using importmaps (Rails 7+) you may have:
/app/assets/builds/

# =========================================
# Test coverage and reports
# =========================================

/coverage/
/spec/examples.txt
/rspec_examples.txt
/.resultset.json
/**/*.retry

# =========================================
# IDE / Editor / OS temp files
# =========================================

# macOS
.DS_Store

# Vim
*.swp
*.swo

# Sublime
*.sublime-project
*.sublime-workspace

# IntelliJ / RubyMine
.idea/
/*.iml

# VS Code
.vscode/

# Emacs
*~

# Byebug
.byebug_history

# =========================================
# Docker (if applicable)
# =========================================

/docker-compose.override.yml
/.env.docker

# =========================================
# Miscellaneous
# =========================================

# System files
Thumbs.db

# Ignore logs from Spring/App preloader
.spring/

# Ignore Spring socket
tmp/spring.sock

# Ignore temporary binary artifacts
*.rbc

# Ignore build artifacts
*.o
*.so

# Ignore bundler credentials (if any)
/.bundle/config

# =========================================
# Keep Git from ignoring these “.keep” files
# =========================================
!/.keep
!/log/.keep
!/tmp/.keep
!/tmp/pids/.keep
!/tmp/cache/.keep
!/storage/.keep
